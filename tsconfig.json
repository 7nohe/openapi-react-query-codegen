{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "baseUrl": ".",
    "rootDir": "src"
  },
  "include": [
    "src"
  ],
}